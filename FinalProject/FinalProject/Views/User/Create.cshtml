@model CreateVM
<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Create User</h4>
                <form method="post" class="forms-sample">

                    <div class="form-group">
                        <label asp-for="FullName">İstifadəçilərin tam adı</label>
                        <input asp-for="FullName" class="form-control">
                        <span asp-validation-for="FullName" class="alert-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UserName">İstifadəçilərin istifadəçi adı</label>
                        <input asp-for="UserName" class="form-control">
                        <span asp-validation-for="UserName" class="alert-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Email">İstifadəçilərin e-maili</label>
                        <input asp-for="Email" class="form-control">
                        <span asp-validation-for="Email" class="alert-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password">İstifadəçiilərin şifrəsi</label>
                        <input asp-for="Password" class="form-control">
                        <span asp-validation-for="Password" class="alert-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CheckPassword">İstifadəçiilərin təkrar şifrəsi</label>
                        <input asp-for="CheckPassword" class="form-control">
                        <span asp-validation-for="CheckPassword" class="alert-danger"></span>
                    </div>
                    @*<div class="form-group">
                                <label>Select Role</label>
                                <select class="form-control" name="newRole">
                                    @foreach (IdentityRole item in ViewBag.Roles)
                                    {
                        <option value="@item.Id">@item.Name</option>
        }
                                </select>
                            </div>*@
                    <button type="submit" class="btn btn-primary me-2">Qeyd edin</button>
                    <a asp-action="Index" class="btn btn-light">Çıxın</a>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}

