@model Doctors
@{
    ViewData["Title"] = "Detail";
}

<div class="row">

    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
              
                <div class="d-flex justify-content-center"> <img style="object-fit : cover; width: 100px; height: 100px;" src="~/images/doctors/@Model.Image" /> </div>
            <h4> Adı : @Model.FullName</h4>
                <div> Şöbəsi : @Model.Branches.Name</div>
                <div> Maaşı : @Model.Salary</div>
                <div> Ünvanı : @Model.Address</div>
                <div> Əlaqə telefonu: @Model.Contact</div>
                <div> Təhsili:@Model.Education</div>




                <a class="btn btn-secondary  btn-sm my-3" asp-action="Index">Geriyə</a>
            </div>
        </div>
    </div>
</div>

