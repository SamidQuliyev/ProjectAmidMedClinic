@model Expenses
<div class="row">
    <div class="col-md-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Xərc yaradın</h4>


                <form method="post" class="forms-sample">

                    <div class="form-group">
                        <label asp-for="Quantity">Miqdarı</label>
                        <input asp-for="Quantity" class="form-control">
                        <span asp-validation-for="Quantity" class="alert-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Reason">Səbəbi</label>
                        <input asp-for="Reason" class="form-control">
                        <span asp-validation-for="Reason" class="alert-danger"></span>
                    </div>
                   
                    <button type="submit" class="btn btn-primary me-2">Qeyd et</button>
                    <a asp-action="Index" class="btn btn-light">Çıx</a>
                </form>
            </div>
        </div>
    </div>

</div>
@section Scripts{
    <partial Name="_ValidationScriptsPartial" />

}